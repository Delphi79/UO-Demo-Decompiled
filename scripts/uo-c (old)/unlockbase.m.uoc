        if(Q54R < Q53M)
        {
          barkTo(user, user, "My spell does not seem to have an effect on that lock.");
        }
        else
        {
          removeObjVar(usedon, "isLocked");
          Q5NC = 0x01;
        }
      }
      else
      {
        barkTo(user, user, "My spell had no effect on that lock.");
